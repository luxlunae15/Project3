<script>
    $(function(){
        $('#passwd').keyup(function(){
            $('#checkpw').html('');
        });
        $('#checkpw').keyup(function(){
            if($('#passwd').val() != $('#checkpw').val()){
                $('#chkNotice').html('비밀번호가 일치하지 않습니다.<br><br>');
                $('#chkNotice').attr('color', '#f82a2aa3');
            }
            else
            {
                $('#chkNotice').html('비밀번호 일치<br><br>');
                $('#chkNotice').attr('color', '#199894b3');
            }
        });
        $("#btnJoin").click(
            function(){

                if($("#id").val() == "")
                {
                    alert("아이디를 꼭 입력 하세요");
                    $("#id").focus();
                    return;
                }
                if($("#passwd").val() == "")
                {
                    alert("비밀번호를 꼭 입력 하세요");
                    $("#passwd").focus();
                    return;
                }
                if($("#checkpw").val() == "")
                {
                    alert("비밀번호를 확인 하세요");
                    $("#checkpw").focus();
                    return;
                }
                if($('#passwd').val() != $('#checkpw').val())
                {
                    alert("비밀번호가 서로 다릅니다.");
                    $("#checkpw").focus();
                    return;
                }
                if($("#name").val() == "")
                {
                    alert("이름을 꼭 입력 하세요");
                    $("#name").focus();
                    return;
                }
                if($("#tel2").val() == "")
                {
                    alert("전화번호 두번째 자리를 확인해 주세요");
                    $("#tel2").focus();
                    return;
                }
                if($("#tel3").val() == "")
                {
                    alert("전화번호 세번째 자리를 확인해 주세요");
                    $("#tel3").focus();
                    return;
                }
                var tel= $("#tel1").val() +'-'+ $("#tel2").val() +'-'+ $("#tel3").val();
                $("#tel").val(tel);
                $("#joinForm").submit();
            });
        $("#btnRtn").click(
            function(){
                history.back();
            })
    })
</script>

