<!DOCTYPE html>
<html>
    <head>
        <script src="/javascripts/jquery-3.5.1.min.js"></script>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css'/>
    </head>
    <body>
        <h1><%= title %></h1>
        <form action="/product_add/<%=store_id%>" method="post" onsubmit="return onWriteSubmit()">
            <table border="1">
                <tr>
                    <td>메뉴 이름</td>
                    <td><input type="text" name="NAME" id="NAME" required></td>
                </tr>
                <tr>
                    <td>가격</td>
                    <td><input type="text" name="PRICE" id="PRICE" required></td>
                </tr>
                <tr>
                    <td>내용</td>
                    <td><textarea name="content" id="content" required></textarea></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button type="submit">상품 추가</button>
                        <input type="button" id="btnRtn" name="return" value="돌아가기">
                    </td>
                </tr>
            </table>
        </form>
        <script>

            $("#btnRtn").click(
                function(){
                    location.href="/store/<%=store_id%>";
                });
            function onWriteSubmit(){
                if ( $("#ID").val().trim() == ""){
                    var message = "아이디를 입력해 주세요.";
                    $("#ID").val("");
                    $("#ID").focus();
                    alert(message);
                    return false;
                }
                if ( $("#NAME").val().trim() == "" ){
                    var message = "메뉴 이름을 입력하세요.";
                    $("#NAME").val("");
                    $("#NAME").focus();
                    alert(message);
                    return false;
                }
                if ( $("#PRICE").val().trim() == ""){
                    var message = "메뉴 가격을 입력하세요.";
                    $("#PRICE").val("");
                    $("#PRICE").focus();
                    alert(message);
                    return false;
                }
                if ( $("#content").val().trim() == ""){
                    var message = "내용을 입력하세요";
                    $("#content").val("");
                    $("#content").focus();
                    alert(message);
                    return false;
                }
            }
        </script>
    </body>
</html>