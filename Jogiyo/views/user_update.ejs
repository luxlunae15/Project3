	function onWriteSubmit()
	{
		if($("#passwd").val() == "")
		{
			alert("비밀번호를 꼭 입력 하세요");
			$("#passwd").focus();
			return;
		}
		if($("#name").val() == "")
		{
			alert("이름을 꼭 입력 하세요");
			$("#name").focus();
			return;
		}
		if($("#tel2").val() == "")
		{
			alert("전화번호 두번째 자리를 확인해 주세요");
			$("#tel2").focus();
			return;
		}
		if($("#tel3").val() == "")
		{
			alert("전화번호 세번째 자리를 확인해 주세요");
			$("#tel3").focus();
			return;
		}
		var tel= $("#tel1").val() +'-'+ $("#tel2").val() +'-'+ $("#tel3").val();
		$("#tel").val(tel);
	}
</script>
