<!DOCTYPE html>
<html>
    <head>
        <script src="/javascripts/jquery-3.5.1.min.js"></script>
        <title>JOGIYO</title>
        <link rel='stylesheet' href='/stylesheets/style.css'/>
    </head>
    <body>
        <h1><%= title %></h1>
        <form action="/seller/update" method="post" onsubmit="return onWriteSubmit()">
            <table border="1">
                <input type="hidden" name="ID" value="<%=row.ID%>"/>
                <tr>
                    <td>상품 이름</td>
                    <td><input type="text" name="NAME" id="NAME" value="<%=row.NAME%>" required/></td>
                </tr>
                <tr>
                    <td>내용</td>
                    <td><textarea type="content" name="content" cols="30" rows="10" required><%=row.content%></textarea></td>
                </tr>
                <tr>
                    <td>가격</td>
                    <td><input type="text" name="PRICE" id="PRICE" value="<%=row.PRICE%>"></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button type="submit">수정</button>
                    </td>
                </tr>
            </table>
        </form>
        <script>
            function onWriteSubmit(){
                if ( $("#NAME").val().trim() == "" ){
                    var message = "메뉴 이름을 입력하세요.";
                    $("#NAME").val("");
                    $("#NAME").focus();
                    alert(message);
                    return false;
                }
                if ( $("#PRICE").val().trim() == ""){
                    var message = "메뉴 가격을 입력하세요.";
                    $("#PRICE").val("");
                    $("#PRICE").focus();
                    alert(message);
                    return false;
                }
                if ( $("#content").val().trim() == ""){
                    var message = "내용을 입력하세요";
                    $("#content").val("");
                    $("#content").focus();
                    alert(message);
                    return false;
                }
            }
        </script>
    </body>
</html>