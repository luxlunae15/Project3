<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script>
        $(function(){
            $("#btnRtn").click(
                function(){
                    location.href="/store/<%=store_id%>";
                })
            $("#btnadd").click(
                function(){
                    location.href="/product_add/<%=store_id%>";
                })
        });
    </script>
</head>
<body>
    <h1><%= title %></h1>
        <table border="1">
            <tr>
                <th>NUM</th>
                <th width="150">상품 이름</th>
                <th>가격</th>
                <th>설명</th>
            </tr>
            <%
                for(var i=0; i<rows.length; i++){
                    var item = rows[i];
            %>
            <tr>
                <td><center><%=i+1%></center></td>
                <td><center><a href="/product/<%=store_id%>/<%=item.menu_ID%>"><%=item.menu_name%></a></center></td>
                <td><center><%=item.menu_price%></center></td>
                <td><center><%=item.menu_content%></center></td>
            </tr>
            <%
                }
            %>
        </table>
        <input type="button" id="btnadd" name="add" value="상품 추가">
        <input type="button" id="btnRtn" name="return" value="돌아가기">
</body>
</html>

